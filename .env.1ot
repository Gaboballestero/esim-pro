# =============================================================================
# CONFIGURACIÓN 1oT eSIM PARA HABLARIS
# =============================================================================

# 1oT API Credentials (obtendrás estas al registrarte)
IOT_API_KEY=tu_api_key_aqui
IOT_API_SECRET=tu_api_secret_aqui
IOT_ENVIRONMENT=sandbox  # cambia a 'production' cuando tengas cuenta real

# 1oT Configuration
IOT_BASE_URL=https://api.1ot.com/v1
IOT_WEBHOOK_URL=http://localhost:8000/api/1ot/webhook/

# eSIM Configuration
DEFAULT_CARRIER=1ot
DEFAULT_DATA_LIMIT_MB=1000
DEFAULT_VALIDITY_DAYS=30

# Test mode mientras desarrollas
IOT_TEST_MODE=true
IOT_SIMULATE_SUCCESS=true
