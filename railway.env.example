# Variables de entorno para Railway - eSIM Pro (hablaris.com)

# Django Core Settings
DEBUG=False
SECRET_KEY=hablaris-esim-production-secret-key-2025-super-secure-random-string
DJANGO_SETTINGS_MODULE=esim_backend.settings

# Domain Configuration
ALLOWED_HOSTS=hablaris.com,www.hablaris.com,*.hablaris.com,*.railway.app
CORS_ALLOWED_ORIGINS=https://hablaris.com,https://www.hablaris.com

# Database (Railway proveerá DATABASE_URL automáticamente)
# DATABASE_URL será configurado automáticamente por Railway PostgreSQL

# Static Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles/

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Email Configuration (opcional por ahora)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# API Keys (configurar después)
ESIM_API_KEY=your-esim-api-key-here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Twilio (opcional, ya removido pero por si necesitas)
# TWILIO_ACCOUNT_SID=your_twilio_sid
# TWILIO_AUTH_TOKEN=your_twilio_token

# Railway Specific
PORT=8000
RAILWAY_ENVIRONMENT=production
